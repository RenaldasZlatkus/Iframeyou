<!DOCTYPE html>
<html>
<head>
  <title>Iframeyou</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>



<div id="showmenu">
<% if current_user %>
	<% if current_user.setting.created_at == current_user.setting.updated_at %>
		<a href="#" class="menu tooltip <%= current_user.setting.background %>-bg <%= current_user.setting.skin %>"><img src="/images/threebars.png" id="image">
		    <span id="showtooltip">
		        <img class="callout" src="/images/callout_black.gif" />

		        <strong>Get Your Frame On!</strong><br />
		        Click the menu button to the right to get started. Click a selection under "Frames and Styles" to choose your view. Choose a "Skin" to determine the color of the frame border and chose a "Background" for your frames. Then just type in your websites and click submit!
		    </span>
		</a>
	<% else %>
		<a href="#" class="menu tooltip <%= current_user.setting.background %>-bg <%= current_user.setting.skin %>"><img src="/images/threebars.png" id="image">
		    <span id="fadetooltip">
		        <img class="callout" src="/images/callout_black.gif" />

		        <strong>Get Your Frame On!</strong><br />
		        Remember to click the menu button to the right to change your settings.
		    </span>
		</a>
	<% end %>

	<div class="settings <%= current_user.setting.background %>-bg <%= current_user.setting.skin %>">
		<a href="#" class="menubox"><img src="/images/threebars.png" id="image"></a>
		<br><br>
		<div class="category-box">
			<%= link_to "Log Out", logout_path, method: :delete, id: "menu-logout" %>
		</div>
		<div class="category-box">
			<p>
				Frames and Layout
			</p>
			<div id="frames-and-layout" class="parent">
				<a href="#" class="options" data-field-value="1" data-field-number="1"><img src="/images/1.png" class="icon1 one"></a>
				<a href="#" class="options" data-field-value="2h" data-field-number="2"><img src="/images/2h.png" class="icon1 two"></a>
				<a href="#" class="options" data-field-value="2v" data-field-number="2"><img src="/images/2v.png" class="icon1 two"></a>
				<a href="#" class="options" data-field-value="3h" data-field-number="3"><img src="/images/3h.png" class="icon1 three"></a>
				<a href="#" class="options" data-field-value="3t"  data-field-number="3"><img src="/images/3t.png" class="icon1 three"></a>
				<a href="#" class="options" data-field-value="3b"  data-field-number="3"><img src="/images/3b.png" class="icon1 three"></a>
				<a href="#" class="options" data-field-value="4a" data-field-number="4"><img src="/images/4a.png" class="icon1 four"></a>
				<a href="#" class="options" data-field-value="4t" data-field-number="4"><img src="/images/4t.png" class="icon1 four"></a>
				<a href="#" class="options" data-field-value="4b" data-field-number="4"><img src="/images/4b.png" class="icon1 four"></a>
			</div>
		</div>
		<div class="category-box">
			<p>
				Skin
			</p>
			<div id="skin" class="parent">
				<a href="#" class="options" data-field-value="black"><img src="/images/1.png" class="icon2"></a>
				<a href="#" class="options" data-field-value="white"><img src="/images/whites.png" class="icon2"></a>
				<a href="#" class="options" data-field-value="pink"><img src="/images/pinks.png" class="icon2"></a>
				<a href="#" class="options" data-field-value="purple"><img src="/images/purples.png" class="icon2"></a>
				<a href="#" class="options" data-field-value="blue"><img src="/images/blues.png" class="icon2"></a>
			</div>
		</div>
		<div class="category-box">
		<p>
			Background
		</p>
			<div id="background" class="parent">
				<a href="#" class="options" data-field-value="black"><img src="/images/black.png" class="icon2"></a>
				<a href="#" class="options" data-field-value="white"><img src="/images/white.png" class="icon2"></a>
				<a href="#" class="options" data-field-value="pink"><img src="/images/pink.png" class="icon2"></a>
				<a href="#" class="options" data-field-value="purple"><img src="/images/purple.png" class="icon2"></a>
				<a href="#" class="options" data-field-value="blue"><img src="/images/blue.png" class="icon2"></a>
			</div>
		</div>
			<br><br>
		<%= form_for current_user.setting, url: user_settings_path(current_user) do |f| %>
		<%= f.hidden_field :frames %>
		<%= f.hidden_field :style %>
		<%= f.hidden_field :skin %>
		<%= f.hidden_field :background %>
		<div id="web1" class="categories category-box">
		<%= f.label :website1, 'Website For Frame One' %><br>
		<%= f.text_field :website1 %><br><br>
		</div>
		<div id="web2" class="categories category-box">
		<%= f.label :website2, 'Website For Frame Two' %><br>
		<%= f.text_field :website2 %><br><br>
		</div>
		<div id="web3" class="categories category-box">
		<%= f.label :website3, 'Website For Frame Three' %><br>
		<%= f.text_field :website3 %><br><br>
		</div>
		<div id="web4" class="categories category-box">
		<%= f.label :website4, 'Website For Frame Four' %><br>
		<%= f.text_field :website4 %><br><br>
		</div>
		<div id="submit">
			<%= f.submit 'Submit' %>
		</div>
		<% end %>
	</div>
<% end %>
</div>

<%= yield %>
<!--  -->
</body>
</html>
